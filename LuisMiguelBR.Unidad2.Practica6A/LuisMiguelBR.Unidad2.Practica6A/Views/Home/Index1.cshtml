@model IEnumerable<LuisMiguelBR.Unidad2.Practica6A.Models.Productos>

@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
    <div class="container">
        <Table class="table">
            <tr class="btn-primary">
                <th>ID</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Precio</th>
            </tr>

            @foreach (var producto in Model)
            {
                <tr>
                    <td>
                        @producto.Id
                    </td>
                    <td>
                        @producto.Descripcion
                    </td>
                    <td>
                        @producto.Tipo
                    </td>
                    <td>
                        @producto.Precio
                    </td>
                    <td>
                        <a href="/Home/Borrar/cod=@producto.Id">Borrar</a>
                    </td>
                    <td>
                        <a href="/Home/Editar/cod=@producto.Id">Editar</a>
                    </td>
                </tr>
            }

        </Table>
    </div>
    
    <a href="/Home/Agregar">Agregar</a>
